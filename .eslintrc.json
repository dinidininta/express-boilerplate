{
    "plugins": [
        "jest"
      ],    
    "env": {
        "es2022": true,
        "node": true,
        "jest/globals": true
    },
    "extends": "airbnb-base",
    "overrides": [
        {
            "files": [
              "**/*.test.js"
            ],
            "rules": {
              "max-lines-per-function": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "max-lines-per-function": [
            "warn",
            {
              "max": 15
            }
        ],
        "no-underscore-dangle": 0   
    },
    "globals": {
        "describe": true,
        "it": true,
        "true": true
    }
}
